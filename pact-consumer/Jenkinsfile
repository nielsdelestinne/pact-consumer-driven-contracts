pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'cd pact-consumer'
                maven {
                    goals('clean')
                    goals('install')
                    properties(skipTests: true)
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
    }
}